  font pango:Output Sans Testing, FontAwesome Medium 10
  colors {
    # background $bg_black
    # statusline $fg_white_dark
    # separator  $bg_gray

    background $bg_black
    statusline $fg_white_dark
    #separator  $bg_black
    separator  $bg_gray
#                       border background text
    focused_workspace  $bg_purple $bg_purple $fg_white
    active_workspace   $bg_purple_dark $bg_purple_dark $fg_white_dark
    inactive_workspace $bg_gray $bg_gray $fg_black
    urgent_workspace   $bg_red_dark $bg_red_dark $fg_white_dark
    binding_mode       $bg_green_dark $bg_green_dark $fg_white_dark
  }
  position top
  # position bottom
  #try padding by default 2
  tray_padding 2
  i3bar_command /usr/bin/i3bar
  # status_command i3status
  status_command /home/mkarmona/opt/i3status-rust/target/release/i3status-rs /home/mkarmona/.config/i3status/config.toml
  # font pango:Input Mono Compressed Bold 10
  #font pango:Input Mono Compressed Medium 10.5
  # font pango:Exo 2 Bold 10
  # separator_symbol "|"
}
